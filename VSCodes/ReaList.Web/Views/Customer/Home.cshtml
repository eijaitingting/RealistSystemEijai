@model ReaList.Library.Model.UserAccounts.CustomerAccountModel

@{
    ViewData["Title"] = "Home";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!DOCTYPE html>
<html lang="en">

<head>
    <title>Homepage</title>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <!-- Local CSS -->
    <link rel="stylesheet" href="~/css/global.css">
    <link rel="stylesheet" href="~/css/customer-homepage.css">
    <!-- Bootstrap CSS v5.2.1 -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet"
          integrity="sha384-9ndCyUaIbzAi2FUVXJi0CjmCapSmO7SnpJef0486qhLnuZ2cdeRhO02iuK6FUUVM" crossorigin="anonymous">
    <!-- Bootstrap Font and Icons 1.3.0 -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.3.0/font/bootstrap-icons.css">
    <link class="jsbin" href="http://ajax.googleapis.com/ajax/libs/jqueryui/1/themes/base/jquery-ui.css" rel="stylesheet" type="text/css" />
</head>

<body>
    <main>
        <!-- Masthead -->
        <header class="masthead mt-3">
            <div class="container position-relative">
                <div class="row justify-content-end">
                    <div class="col-md-4">
                        <div class="card home-card">
                            <div class="card-body home-card text-center">
                                <h2 class="card-title">STUNNING 6 BED HOUSE IN THE HEART OF THE CITY</h2>
                                <p class="card-text home-card">
                                    With supporting text below as a natural lead-in to additional content. This is a wow building
                                    like wow. Very good example of a house in ReaList. Buy it or regret it. It is a very good house. Very wide. very wow.
                                </p>
                                <a asp-controller="Property" asp-action="ListingsForSale" class="btn btn-primary home-card">VIEW PROPERTY</a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </header>
        <!-- Latest Sale Properties Section -->
        <section class="latest-sale-properties">
            <div class="container latest-sale-properties">
                <h2 class="text-center latest-sale-header">LATEST PROPERTIES FOR SALE</h2>
                <div class="row">
                    <div class="card border-0 col-lg-4">
                        <img class="card-img-top" src="../images/LP1.jpg" alt="Card image cap">
                        <div class="card-body latest">
                            <h4 class="card-title">Down Avenue</h4>
                            <h5 class="property-price">P6,000,000</h5>
                            <p class="room-no.">4 bedrooms</p>
                            <p class="card-text">
                                Suburban house with four bedrooms, a master suite, and a large kitchen and yard. ideal for large families. situated close to top-notch schools in a quiet neighborhood.
                            </p>
                            <a asp-controller="Property" asp-action="ListingsForSale" class="btn btn-primary view-property">View Properties</a>
                        </div>
                    </div>
                    <div class="card border-0 col-lg-4">
                        <img class="card-img-top" src="../images/LP2.jpg" alt="Card image cap">
                        <div class="card-body latest">
                            <h4 class="card-title">Down Avenue</h4>
                            <h5 class="property-price">P7,000,000</h5>
                            <p class="room-no.">4 bedrooms</p>
                            <p class="card-text">
                                Four-bedroom oceanfront villa featuring a gourmet kitchen, a private beach access, and a deck overlooking the ocean. A lavish seaside retreat for people longing for a beach lifestyle.
                            </p>
                            <a asp-controller="Property" asp-action="ListingsForSale" class="btn btn-primary view-property">View Properties</a>
                        </div>
                    </div>
                    <div class="card border-0 col-lg-4">
                        <img class="card-img-top" src="../images/LP3.jpg" alt="Card image cap">
                        <div class="card-body latest">
                            <h4 class="card-title">Down Avenue</h4>
                            <h5 class="property-price">P8,000,000</h5>
                            <p class="room-no.">4 bedrooms</p>
                            <p class="card-text">
                                2 000 sq. ft. loft in the heart of the city. high ceilings, an entrance at street level, and exposed brick. adaptable for workplaces or retail. Excellent position in the heart of the city.
                            </p>
                            <a asp-controller="Property" asp-action="ListingsForSale" class="btn btn-primary view-property">View Properties</a>
                        </div>
                    </div>
                </div>
                <div class="container text-center">
                    <a asp-controller="Property" asp-action="ListingsForSale" class="btn btn-primary btn-lg latest-properties">SHOW MORE PROPERTIES FOR SALE</a>
                </div>
            </div>
        </section>
        
        <!-- What We Offer Section -->
        <section class="what-we-offer">
            <div class="container what-we-offer">
                <h2 class="text-center what-we-offer-header">WHAT WE OFFER</h2>
                <div class="row">
                    <div class="card text-center border-0 col-lg-4">
                        <img class="card-img-top icons mx-auto" src="../images/free_registration_icon.png" alt="Card image cap">
                        <div class="card-body what-we-offer text-center">
                            <h4 class="card-title">FREE REGISTRATION, NO HIDDEN FEES</h4>
                            <p class="card-text what-we-offer">
                                Quickly set-up your account as an agent or customer.
                            </p>
                        </div>
                    </div>
                    <div class="card text-center border-0 col-lg-4">
                        <img class="card-img-top icons mx-auto" src="../images/virtualtouricon.png" alt="Card image cap">
                        <div class="card-body what-we-offer text-center">
                            <h4 class="card-title">360° VIRTUAL TOUR CHECK BEFORE VISIT</h4>
                            <p class="card-text what-we-offer">
                                Tour the property from the screens of your devices.
                            </p>
                        </div>
                    </div>
                    <div class="card text-center border-0 col-lg-4">
                        <img class="card-img-top icons mx-auto" src="../images/book_a_visit_icon.png" alt="Card image cap">
                        <div class="card-body what-we-offer text-center">
                            <h4 class="card-title">BOOK A VISIT, RESERVE A TIME SLOT</h4>
                            <p class="card-text what-we-offer">
                                Ready to see the property in person?
                            </p>
                        </div>
                    </div>
                </div>
            </div>
        </section>

        <!-- What Our Client Thinks Section -->
        <section class="what-client-thinks">
            <div class="container what-client-thinks">
                <h2 class="text-center what-client-thinks-header">WHAT OUR CLIENTS THINK</h2>
                <div class="row what-client-think-card">
                    <div class="card what-client-thinks border-0 col-lg-4">
                        <img class="card-img-top quote-icon mx-auto" src="../images/quoteicon.png" alt="quote icon">
                        <div class="card-body what-client-thinks-body">
                            <p class="card-text quote">
                                "Using this platform to look for a house is easy. The property details are extensive, and the search filters are user-friendly. I quickly discovered my ideal house because of the interface's ease of use."
                            </p>
                            <h4 class="card-title text-center"></h4>
                            <div class="card_profile-img">
                                <img class="card-img-top icons mx-auto" src="../images/profileholder1.jpg" alt="Card image cap">
                            </div>
                        </div>
                    </div>
                    <div class="card what-client-thinks border-0 col-lg-4">
                        <img class="card-img-top quote-icon mx-auto" src="../images/quoteicon.png" alt="quote icon">
                        <div class="card-body what-client-thinks-body">
                            <p class="card-text quote">
                                "I use this site for property listings and market insights because I'm an investor in real estate. I am kept informed by the platform's timely updates and the analytics tools, which are priceless. A necessity for any conscientious investor."
                            </p>
                            <h4 class="card-title text-center"></h4>
                            <div class="card_profile-img">
                                <img class="card-img-top icons mx-auto" src="../images/profileholder1.jpg" alt="Card image cap">
                            </div>
                        </div>
                    </div>
                    <div class="card what-client-thinks border-0 col-lg-4">
                        <img class="card-img-top quote-icon mx-auto" src="../images/quoteicon.png" alt="quote icon">
                        <div class="card-body what-client-thinks-body">
                            <p class="card-text quote">
                                "The customer service on this platform is what makes it unique. They made sure the transaction went smoothly, helped me through the entire selling process, and promptly responded to my questions. From the beginning to the end, I felt like a valued client."
                            </p>
                            <h4 class="card-title text-center"></h4>
                            <div class="card_profile-img">
                                <img class="card-img-top icons mx-auto" src="../images/profileholder1.jpg" alt="Card image cap">
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </section>
        <!-- Frequently Asked Questions Section -->
        <section class="frequently-asked">
            <div class="container mt-5 mb-5">
                <div class="col-md-12" id="freQuest">
                    <div class="faqHeader">
                        <h3 style="text-align: center;"><b>FREQUENTLY ASKED QUESTIONS</b></h3>
                    </div>
                    <div class="accordion" id="accordionExample">
                        <div class="accordion-item">
                            <h2 class="accordion-header" id="headingOne">
                                <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#collapseOne" aria-expanded="false" aria-controls="collapseOne">
                                    Is the price negotiable?
                                </button>
                            </h2>
                            <div id="collapseOne" class="accordion-collapse collapse" aria-labelledby="headingOne" data-bs-parent="#accordionExample">
                                <div class="accordion-body">
                                    <strong>Yes, you can negotiate the price with the broker.
                                </div>
                            </div>
                        </div>

                        <div class="accordion-item">
                            <h2 class="accordion-header" id="headingTwo">
                                <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#collapseTwo" aria-expanded="false" aria-controls="collapseTwo">
                                    Are the registered brokers in the platform licensed?
                                </button>
                            </h2>
                            <div id="collapseTwo" class="accordion-collapse collapse" aria-labelledby="headingTwo" data-bs-parent="#accordionExample">
                                <div class="accordion-body">
                                    <strong>Yes, we require the agents to submit their ID for verification before we tag them as verfied.
                                </div>
                            </div>
                        </div>

                        <div class="accordion-item">
                            <h2 class="accordion-header" id="headingThree">
                                <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#collapseThree" aria-expanded="false" aria-controls="collapseThree">
                                    Are your platform free?
                                </button>
                            </h2>
                            <div id="collapseThree" class="accordion-collapse collapse" aria-labelledby="headingThree" data-bs-parent="#accordionExample">
                                <div class="accordion-body">
                                    <strong>Yes, it is free for customers. But for agents, they can use the platform for free, but there are some features that only accesible when they subscribe.
                                </div>
                            </div>
                        </div>

                        <div class="accordion-item">
                            <h2 class="accordion-header" id="headingFour">
                                <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#collapseFour" aria-expanded="false" aria-controls="collapseFour">
                                    Can we visit the properties listed in your platform?
                                </button>
                            </h2>
                            <div id="collapseFour" class="accordion-collapse collapse" aria-labelledby="headingFour" data-bs-parent="#accordionExample">
                                <div class="accordion-body">
                                    <strong>Yes, you can ask the agent to schedule you for a visit, but it is outside our platform.
                                </div>
                            </div>
                        </div>

                        <div class="accordion-item">
                            <h2 class="accordion-header" id="headingFive">
                                <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#collapseFive" aria-expanded="false" aria-controls="collapseFive">
                                    What is the price range of the listed properties?
                                </button>
                            </h2>
                            <div id="collapseFive" class="accordion-collapse collapse" aria-labelledby="headingFive" data-bs-parent="#accordionExample">
                                <div class="accordion-body">
                                    <strong>The price depends on the size, location, and the preferred selling price of the owner.
                                </div>
                            </div>
                        </div>

                        <div class="accordion-item">
                            <h2 class="accordion-header" id="headingSix">
                                <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#collapseSix" aria-expanded="false" aria-controls="collapseSix">
                                    How can we contact you?
                                </button>
                            </h2>
                            <div id="collapseSix" class="accordion-collapse collapse" aria-labelledby="headingSix" data-bs-parent="#accordionExample">
                                <div class="accordion-body">
                                    <strong>You can send us an email at customercare@realist.com.
                                </div>
                            </div>
                        </div>

                    </div>
                </div>
            </div>
        </section>
        <!-- Contact Us Section -->
        <section class="contact-us mt-2 mb-5">
            <div class="d-flex container justify-content-center">
                <div class="row container g-3 col-md-10">
                    <div class="col-md-8" id="contactus">
                        <div class="row">
                            <div class="col-md-6">
                                <div class="container reachus">
                                    <p class="title-reachus">Reach Us Through</p>
                                    <p class="title-sales">SALES:</p>
                                    <p class="sales-email">sales@realist.com</p>
                                    <p class="title-admin">ADMIN:</p>
                                    <p class="admin-email">adminsupport@realist.com</p>
                                    <p class="title-custcare">CUSTOMER CARE:</p>
                                    <p class="customer-email">customercare@realist.com</p>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="container followus">
                                    <p class="title-followus">Follow Us</p>
                                    <div class="center socmed">
                                        <i class="bi bi-facebook"></i><i class="bi bi-twitter"></i><i class="bi bi-instagram"></i>
                                    </div>
                                    <p class="compadd">711-2880 Nulla St. Manila, Philippines 96522</p>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="container contactus">
                            <form>
                                <p class="title-contactus">CONTACT US</p>
                                <div class="form-group">
                                    <label for="first-name"><b>First Name</b></label>
                                    <input type="text" class="form-control" id="first-name" name="first-name"><br>
                                    <label for="last-name"><b>Last Name</b></label>
                                    <input type="text" class="form-control" id="last-name" name="last-name"><br>
                                    <label for="email"><b>Email</b></label>
                                    <input type="email" class="form-control" id="email" name="email"><br>
                                    <label for="subject"><b>Subject</b></label>
                                    <input type="text" class="form-control" id="subject" name="subject"><br>
                                    <textarea id="message" name="message" placeholder="Type your message here..." rows="4"
                                              cols="35"></textarea>
                                    <div>
                                        <button type="submit" class="submitBtn">Submit</button>
                                    </div>
                                </div>
                            </form>
                        </div>
                    </div>
                </div> <!-- row end tag -->
            </div> <!-- d-flex end tag -->
        </section>
    </main>
    <footer>
        <!-- place footer here -->
    </footer>
    <!-- Bootstrap JavaScript Libraries -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"
            integrity="sha384-geWF76RCwLtnZ8qwWowPQNguL3RmwHVBC9FhGdlKrxdiJJigb/j/68SIy3Te4Bkz" crossorigin="anonymous">
    </script>
    <script src="https://code.jquery.com/jquery-3.5.1.js"></script>
    <script src="https://cdn.datatables.net/1.13.4/js/jquery.dataTables.min.js"></script>
    <script src="https://cdn.datatables.net/1.13.4/js/dataTables.bootstrap5.min.js"></script>
    <script src="./js/agent-bookingmanagement.js"></script>
</body>
</html>