@model ReaList.Library.Model.UserAccounts.CustomerAccountModel

@{
    ViewData["Title"] = "ForgotPassword";
    Layout = "~/views/shared/_Layout.cshtml";
}

<!DOCTYPE html>
<html lang="en">

<head>

</head>

<body class="vh-100 body-overflow-hidden">
    <main>
        <section>
            <div class="row d-flex justify-content-center align-items-center h-100">
                <div class="col-xl-6 mt-4 mb-3">
                    <div class="card">
                        <div class="card-body pt-5 px-5 text-center">
                            <p class="text-center h1 fw-bold mb-5">Enter your Email Address to recover your account</p>
                            @if (ViewBag.ErrorMessage != null)
                            {
                                <div class="error-message text-danger">
                                    @ViewBag.ErrorMessage
                                </div>
                            }

                            <form asp-controller="Customer" asp-action="ForgotPasswordConfirmation" method="post">
                                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                                <input type="hidden" id="ResetPasswordCode" value="@Model.ResetPasswordCode" />
                                <input asp-for="ResetPasswordCode" class="form-control" value="@Model.ResetPasswordCode" hidden />


                                <div class="d-flex flex-row align-items-center mb-4">
                                    <div class="form-outline flex-fill mb-0">
                                        <input asp-for="Password" class="form-control" placeholder="Password" />
                                        <span asp-validation-for="Password" class="text-danger"></span>
                                    </div>
                                </div>

                                <div class="d-flex flex-row align-items-center mb-4">
                                    <div class="form-outline flex-fill mb-0">
                                        <input asp-for="ConfirmPassword" class="form-control" placeholder="Confirm Password" />
                                        <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                                    </div>
                                </div>

                                <input type="submit" value="Submit" class="btn btn-primary btn-lg px-5" />

                          
                            </form>
                            @section Scripts {
                                @{
                                    await Html.RenderPartialAsync("_ValidationScriptsPartial");
                                }
                            }
                        </div>
                    </div>
                </div>
            </div>
        </section>
    </main>
    <footer>
        <!-- place footer here -->
    </footer>
    <!-- Bootstrap JavaScript Libraries -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.1/dist/js/bootstrap.min.js"
            integrity="sha384-7VPbUDkoPSGFnVtYi0QogXtr74QeVeeIs99Qfg5YCF+TidwNdjvaKZX19NZ/e6oz" crossorigin="anonymous">
    </script>
</body>
</html>