@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">

<head>
    <title>Register Selection</title>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <!-- Local CSS -->
    <link rel="stylesheet" href="~/css/global.css">
    <link rel="stylesheet" href="~/css/registerselection.css">
    <!-- Bootstrap CSS v5.2.1 -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet"
          integrity="sha384-9ndCyUaIbzAi2FUVXJi0CjmCapSmO7SnpJef0486qhLnuZ2cdeRhO02iuK6FUUVM" crossorigin="anonymous">
    <!-- Bootstrap Font and Icons 1.3.0 -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.3.0/font/bootstrap-icons.css">
</head>

<body class="vh-100 body-bg">
    <main class="mt-4 mb-3">
        <div class="selection container">
            <div class="row justify-content-center g-5">
                <div class="col-md-5">
                    <div class="card text-center">
                        <img src="~/images/agent_selection.jpg" style="height: 500px;" alt="Agent Select" class="card-img-top">
                        <div class="card-body">
                            <a class="btn btn-primary" asp-controller="AgentAccount" asp-action="Register">Register as an Agent</a>
                        </div>
                    </div>
                </div>
                <div class="col-md-5">
                    <div class="card text-center">
                        <img src="~/images/customer_selection.jpg" style="height: 500px;" alt="Customer Select" class="card-img-top">
                        <div class="card-body">
                            <a class="btn btn-primary" asp-controller="CustomerAccount" asp-action="Register">Register as a Customer</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </main>
    <footer>
        <!-- place footer here -->
    </footer>
    <!-- Bootstrap JavaScript Libraries -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.1/dist/js/bootstrap.min.js"
            integrity="sha384-7VPbUDkoPSGFnVtYi0QogXtr74QeVeeIs99Qfg5YCF+TidwNdjvaKZX19NZ/e6oz" crossorigin="anonymous">
    </script>
</body>
</html>