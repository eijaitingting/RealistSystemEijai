@model ReaList.Library.Model.Complaints.ComplaintsModel

@{
    ViewData["Title"] = "AddComplaint";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <title>Add Complaint</title>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <!-- Local CSS -->
    <link rel="stylesheet" href="/css/global.css">
    <link rel="stylesheet" href="/css/addcomplaint.css">
    <!-- Bootstrap CSS v5.2.1 -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet"
          integrity="sha384-9ndCyUaIbzAi2FUVXJi0CjmCapSmO7SnpJef0486qhLnuZ2cdeRhO02iuK6FUUVM" crossorigin="anonymous">
    <!-- Bootstrap Font and Icons 1.3.0 -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.3.0/font/bootstrap-icons.css">

    <link class="jsbin" href="http://ajax.googleapis.com/ajax/libs/jqueryui/1/themes/base/jquery-ui.css" rel="stylesheet" type="text/css" />
    <script class="jsbin" src="http://ajax.googleapis.com/ajax/libs/jquery/1/jquery.min.js"></script>
    <script class="jsbin" src="http://ajax.googleapis.com/ajax/libs/jqueryui/1.8.0/jquery-ui.min.js"></script>
</head>

<body>
    <main>
        <div class="d-flex container justify-content-center">
            <div class="row g-3 col-md-12">

                <h2 class="mt-5">Write a Complaint</h2>

                <form asp-controller="Complaints" asp-action="SaveComplaint" method="post">

                    <div class="form-group col-lg-12 ">
                        <div class="row">

                            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                            <!-- Complaint ID-->
                            <div class="form-group">
                                <input asp-for="ComplaintID" class="form-control" type="hidden" />
                            </div>

                            <!-- Agent ID -->
                            <div class="form-group">
                                <input asp-for="AgentID" class="form-control" type="hidden" />
                            </div>

                            <!-- Customer ID-->
                            <div class="form-group">
                                <input asp-for="CustomerID" class="form-control" type="hidden" />
                            </div>

                            <!-- Complaint Category and Date of Event -->
                            <div class="row mx-auto p-0">
                                <div class="col-md-6">
                                    <label asp-for="ComplaintCategory" class="pb-1 h6">Complaint Category</label><br />
                                    <select id="complaint-select" asp-for="ComplaintCategory" name="ComplaintCategory" class="form-control mb-3">
                                        <option selected disabled>Select Complaint Category</option>
                                        <option value="1">Complain about a Customer</option>
                                        <option value="2">Complain about an Agent</option>
                                        <option value="3">Booking Concerns</option>
                                        <option value="4">Others</option>
                                    </select>
                                </div>

                                <div class="col-md-6">
                                    <label asp-for="DateOfEvent" class="pb-1 h6">Date of Event</label>
                                    <input id="select-date" asp-for="DateOfEvent" class="form-control mb-3" />
                                    <span asp-validation-for="DateOfEvent" class="text-danger"></span>
                                </div>
                            </div>

                            <!-- Complaint Subject -->
                            <div class="col-md-12">
                                <label asp-for="ComplaintSubject" class="pb-1 h6">Complaint Subject</label>
                                <input id="complaint-subject" asp-for="ComplaintSubject" class="form-control mb-3" />
                                <span asp-validation-for="ComplaintSubject" class="text-danger"></span>
                            </div>

                            <!-- Complaint Details -->
                            <div class="col-md-12">
                                <label asp-for="ComplaintDetails" class="pb-1 h6">Complaint Details</label>
                                <br />
                                <textarea asp-for="ComplaintDetails" class="form-control mb-3" rows="5" cols="173"></textarea>
                                <span asp-validation-for="ComplaintDetails" class="text-danger"></span>
                            </div>

                            <!-- Complaint Images -->
                            @*<div class="form-group">
                                <label asp-for="ComplaintImages" class="pb-1 h6">Upload Photo(s) / Screenshot(s) related to the incident</label>
                                <input asp-for="ComplaintImages" class="form-control mb-3" type="file" />
                                <span asp-validation-for="ComplaintImages" class="text-danger"></span>
                            </div>*@

                            <div class="form-group">
                                <input asp-for="DateCreated" class="form-control" type="hidden" />
                            </div>
                            <br />

                            <!-- Submit Button -->
                            <div class="row mx-auto p-0 justify-content-end align-items-end">
                                <div class="col-sm-3 d-flex justify-content-end align-items-center">
                                    <input type="submit" value="Submit" class="btn" />
                                </div>
                            </div>

                        </div>
                    </div>                   
                </form>
            </div>
        </div>

        @section Scripts {
            @{
                await Html.RenderPartialAsync("_ValidationScriptsPartial");
            }
        }

    </main>
</body>
</html>