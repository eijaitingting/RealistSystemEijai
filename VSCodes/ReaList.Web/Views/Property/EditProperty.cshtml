                                            <input type="file" class="form-control" asp-for="Tenth" multiple onchange="readURL(this, 'blah10');" />
                                        </div>
                                    </div>
                                </div>
                            </div> <!-- upload photos end tag -->

                            <!-- Neighborhood Ratings-->
                            <div class="row mb-4 mx-auto p-0">
                                <div class="col-md-12">
                                    <label class="pb-1 h6" for="neigh-ratings">Neighborhood Ratings</label><br>

                                    <!-- ROADS -->
                                    <h5 asp-for="RoadRatings" class="m-0 head-star">Roads</h5>
                                    <div class="rating">
                                        <input type="radio" id="road5" asp-for="RoadRatings" value="5" name="RoadRatings" /><label for="road5"></label>
                                        <input type="radio" id="road4" asp-for="RoadRatings" value="4" name="RoadRatings" /><label for="road4"></label>
                                        <input type="radio" id="road3" asp-for="RoadRatings" value="3" name="RoadRatings" /><label for="road3"></label>
                                        <input type="radio" id="road2" asp-for="RoadRatings" value="2" name="RoadRatings" /><label for="road2"></label>
                                        <input type="radio" id="road1" asp-for="RoadRatings" value="1" name="RoadRatings" /><label for="road1"></label>
                                    </div>
                                    <span asp-validation-for="RoadRatings" class="text-danger"></span>
                                    <div class="row mb-3 column-gap-2 mx-auto p-0">
                                        <div class="col p-2 rating-desc">
                                            <div>The roads surrounding the property are not maintained.</div>
                                        </div>
                                        <div class="col p-2 rating-desc">
                                            <div>The roads surrounding the property are slightly maintained.</div>
                                        </div>
                                        <div class="col p-2 rating-desc">
                                            <div>The roads surrounding the property are maintained.</div>
                                        </div>
                                        <div class="col p-2 rating-desc">
                                            <div>The roads surrounding the property are well-maintained.</div>
                                        </div>
                                        <div class="col p-2 rating-desc">
                                            <div>The roads surrounding the property are greatly-maintained.</div>
                                        </div>
                                    </div>

                                    <!-- SAFETY -->
                                    <h5 asp-for="SafetyRatings" class="m-0 head-star">Safety</h5>
                                    <div class="rating">
