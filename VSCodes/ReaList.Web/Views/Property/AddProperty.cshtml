                                    <label asp-for="City" class="pb-1 h6">City</label><br>
                                    <select id="city-group" asp-for="City" name="City" class="form-control mb-3">
                                        <option selected disabled>Select City</option>
                                        <option value="Caloocan City">Caloocan City</option>
