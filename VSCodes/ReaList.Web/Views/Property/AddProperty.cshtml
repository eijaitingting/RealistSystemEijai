@model ReaList.Library.Model.RealistsVM

@{
    ViewData["Title"] = "Property";
    var sub = Model.subscriptionList
           .Where(x => x.AgentID == Model.agentAccountModel.AgentID && x.IsActive && x.ExpiryDate > DateTime.Now)
           .FirstOrDefault();
}

<head>
    <title>Add Property</title>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <!-- Local CSS -->
    <link rel="stylesheet" href="/css/global.css">
    <link rel="stylesheet" href="/css/agent-addlistingform.css">
    <!-- Bootstrap CSS v5.2.1 -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet"
          integrity="sha384-9ndCyUaIbzAi2FUVXJi0CjmCapSmO7SnpJef0486qhLnuZ2cdeRhO02iuK6FUUVM" crossorigin="anonymous">
    <!-- Bootstrap Font and Icons 1.3.0 -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.3.0/font/bootstrap-icons.css">

    <link class="jsbin" href="http://ajax.googleapis.com/ajax/libs/jqueryui/1/themes/base/jquery-ui.css" rel="stylesheet" type="text/css" />
    <script class="jsbin" src="http://ajax.googleapis.com/ajax/libs/jquery/1/jquery.min.js"></script>
    <script class="jsbin" src="http://ajax.googleapis.com/ajax/libs/jqueryui/1.8.0/jquery-ui.min.js"></script>
</head>

<body>
    <main>
        <div class="d-flex container justify-content-center">
            <div class="row g-3 col-md-12">

                <h2 class="mt-5">Add a New Listing</h2>
                @if (!string.IsNullOrEmpty(ViewBag.SuccessMessage))
                {
                    <div class="alert alert-success">@ViewBag.SuccessMessage</div>
                }

                @if (ViewBag.ErrorMessage != null)
                {
                    <div class="error-message text-danger">
                        @ViewBag.ErrorMessage
                    </div>
                }

                <form asp-controller="Property" asp-action="SaveProperty" method="post" enctype="multipart/form-data">
                    <div class="form-group col-lg-12 ">
                        <div class="row">

                            <!-- Property ID -->
                            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                            <div class="form-group">
                                <input asp-for="propertyModel.PropertyID" class="form-control" type="hidden" />
                            </div>

                            <!-- Agent ID -->
                            <div class="form-group">
                                <input asp-for="propertyModel.AgentID" class="form-control" type="hidden" />
                            </div>


                            <!-- Property Name -->
                            <div class="col-md-12">
                                <label asp-for="propertyModel.PropertyName" class="pb-1 h6">Property Name</label>
                                <input asp-for="propertyModel.PropertyName" class="form-control mb-3" id="property-name" />
                                <span asp-validation-for="propertyModel.PropertyName" class="text-danger"></span>
                            </div>

                            <!-- Overview -->
                            <div class="col-md-12">
                                <label asp-for="propertyModel.Overview" class="pb-1 h6">Overview</label>
                                <br />
                                <textarea id="overview" asp-for="propertyModel.Overview" class="form-control mb-3" rows="7" cols="173"></textarea>
                                <span asp-validation-for="propertyModel.Overview" class="text-danger"></span>
                            </div>

                            <!-- Property Category, Property Type, and Total Price -->
                            <div class="row mx-auto p-0">
                                <div class="col-md-4">
                                    <label asp-for="propertyModel.PropertyCategoryID" class="pb-1 h6">Property Category</label><br>
                                    <select id="property-category" asp-for="propertyModel.PropertyCategoryID" name="PropertyCategoryID" class="form-control mb-3">
                                        <option selected disabled>Select Property Category</option>
                                        <option value="1">For Sale</option>
                                        <option value="2">For Rent</option>
                                    </select>
                                    <span asp-validation-for="propertyModel.PropertyCategoryID" class="text-danger"></span>
                                </div>

                                <div class="col-md-4">
                                    <label asp-for="propertyModel.PropertyTypeID" class="pb-1 h6">Property Type</label><br>
                                    <select id="property-type" asp-for="propertyModel.PropertyTypeID" name="PropertyTypeID" class="form-control mb-3">
                                        <option selected disabled>Select Property Type</option>
                                        <option value="1">House and Lot</option>
                                        <option value="2">Condominium</option>
                                        <option value="3">Apartment</option>
                                    </select>
                                    <span asp-validation-for="propertyModel.PropertyTypeID" class="text-danger"></span>
                                </div>

                                <div class="col-md-4">
                                    <label asp-for="propertyModel.TotalPrice" class="pb-1 h6">Total Price (in PHP)</label>
                                    <input id="total-price" asp-for="propertyModel.TotalPrice" class="form-control mb-3" placeholder="Enter Total Price" min="5000" />
                                    <span asp-validation-for="propertyModel.TotalPrice" class="text-danger"></span>
                                </div>
                            </div>

                            <!-- Bedrooms, Bathrooms, and Floor Area -->
                            <div class="row mx-auto p-0">
                                <div class="col-md-4">
                                    <label asp-for="propertyModel.Bedrooms" class="pb-1 h6">Bedrooms</label>
                                    <input id="num-bed" asp-for="propertyModel.Bedrooms" class="form-control mb-3" placeholder="No. of Bedrooms" />
                                    <span asp-validation-for="propertyModel.Bedrooms" class="text-danger"></span>
                                </div>

                                <div class="col-md-4">
                                    <label asp-for="propertyModel.Bathrooms" class="pb-1 h6">Bathrooms</label>
                                    <input id="num-bath" asp-for="propertyModel.Bathrooms" class="form-control mb-3" placeholder="No. of Bathrooms" />
                                    <span asp-validation-for="propertyModel.Bathrooms" class="text-danger"></span>
                                </div>

                                <div class="col-md-4">
                                    <label asp-for="propertyModel.FloorAreaSize" class="pb-1 h6">Floor Area (in sqm)</label>
                                    <input id="floor-area" asp-for="propertyModel.FloorAreaSize" class="form-control mb-3" />
                                    <span asp-validation-for="propertyModel.FloorAreaSize" class="text-danger"></span>
                                </div>
                            </div>

                            <!-- Region and City -->
                            <div class="row mx-auto p-0">
                                <div class="col-md-6">
                                    <label class="pb-1 h6" asp-for="propertyModel.Region">Region</label><br>
                                    <select id="region-select" asp-for="propertyModel.Region" name="Region" class="form-control mb-3">
                                        <option selected>Metro Manila</option>                                        
                                    </select>
                                    <span asp-validation-for="propertyModel.Region" class="text-danger"></span>
                                </div>                               

                                <div class="col-md-6">
                                    <label asp-for="propertyModel.City" class="pb-1 h6">City</label>
                                    <input id="city-group" asp-for="propertyModel.City" class="form-control mb-3" />
                                    <span asp-validation-for="propertyModel.City" name="City" class="text-danger"></span>
                                </div>
