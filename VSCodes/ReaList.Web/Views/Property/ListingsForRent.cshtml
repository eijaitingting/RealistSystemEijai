@model List<ReaList.Library.Model.Properties.PropertyModel>

@{
    ViewData["Title"] = "Listings For Rent";
}

<!DOCTYPE html>
<html lang="en">

<head>
    <title>Listings for Rent</title>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <!-- Local CSS -->
    <link rel="stylesheet" href="~/css/global.css">
    <link rel="stylesheet" href="~/css/customer-properties(buy).css">
    <!-- Bootstrap CSS v5.2.1 -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet"
          integrity="sha384-9ndCyUaIbzAi2FUVXJi0CjmCapSmO7SnpJef0486qhLnuZ2cdeRhO02iuK6FUUVM" crossorigin="anonymous">
    <!-- Bootstrap Font and Icons 1.3.0 -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.3.0/font/bootstrap-icons.css">
    <link class="jsbin" href="http://ajax.googleapis.com/ajax/libs/jqueryui/1/themes/base/jquery-ui.css" rel="stylesheet" type="text/css" />
</head>

<body>
    <main>
        <div class="d-flex container justify-content-center">
            <div class="row g-3 col-md-12">

                <div class="container">
                    <div class="row mt-5">

                        <!-- text header -->
                        <div class="container col-md-12">
                            <h3 class="text-header">Listings for Rent</h3>
                        </div>

                        <!-- semi-nav -->
                        <div class="container semi-nav p-0 mt-2 mb-5">
                            <ul class="nav">
                                <li class="nav-item">
                                    <a asp-action="ListingsForSale" class="nav-link nav2">For Sale</a>
                                </li>
                                <li class="nav-item">
                                    <a asp-action="ListingsForRent" class="nav-link nav2 active">For Rent</a>
                                </li>
                            </ul>
                        </div>

                        <div class="container posted-listings">
                            <!-- CARD PROPERTIES -->
                            <div class="row mb-3 cardRow">

                                @foreach (var property in Model)
                                {

                                    <div class="col-md-4">
                                        <div class="card">


                                            <div class="agent">
                                                <img src="~/UploadedFiles/@property.MainPhoto" alt="Agent Image">
                                                <div class="details">
                                                    <div class="name">@property.AgentName</div>
                                                    <div class="designation-date p-0">
                                                        <div class="designation">@property.AgentType</div>
                                                        <!--<div class="published-date">Published on: 12/01/22</div>-->
                                                    </div>
                                                </div>
                                            </div>

                                            <div class="property">
                                                <a @Html.ActionLink("", "PropertyDetails", new { id = property.PropertyID })><img src="~/UploadedFiles/@property.MainPhoto" alt="Property Image"></a>
                                                <div class="ribbon sale">@property.PropertyCategoryName</div>
                                            </div>

                                            <div class="property-details">
                                                <div class="property-name">@property.PropertyName<span class="price">₱@property.TotalPrice</span></div>
                                                <div class="address">
                                                    <span class="ribbon @(property.PropertyTypeName == "House and Lot" ? "house" : property.PropertyTypeName == "Condominium" ? "condo" : property.PropertyTypeName == "Apartment" ? "apart" : "")">@property.PropertyTypeName</span>
                                                    <!-- <span class="ribbon house">@property.PropertyTypeName</span> -->
                                                </div>
                                                <div class="address">@property.Location</div>
                                            </div>

                                        </div>
                                    </div>
                                }

                            </div>
                        </div>
                    </div>
                </div>

            </div>
        </div>
    </main>
</body>
</html>