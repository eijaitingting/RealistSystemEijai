@model ReaList.Library.Model.UserAccounts.AdminAccountModel
@{
     
}
<main>
    <section class="vh-100">
        <div class="row d-flex justify-content-center align-items-center h-100">
            <div class="col-12 col-md-8 col-lg-5 col-xl-4">
                <div class="card">
                    <div class="card-body p-5 text-center">
                        <div class="mb-md-5 mt-md-4 pb-5">
                            <p class="text-center h1 fw-bold mb-5">Enter your new password</p>
                            <form asp-controller="Admin" asp-action="ForgotPasswordConfirmation" method="post">
                                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                                <input type="hidden" id="ResetPasswordCode" value="@Model.ResetPasswordCode" />
                                <input asp-for="ResetPasswordCode" class="form-control" value="@Model.ResetPasswordCode" hidden />


                                <div class="d-flex flex-row align-items-center mb-4">
                                    <div class="form-outline flex-fill mb-0">
                                        <input asp-for="Password" class="form-control" placeholder="Password" />
                                        <span asp-validation-for="Password" class="text-danger"></span>
                                    </div>
                                </div>

                                <div class="d-flex flex-row align-items-center mb-4">
                                    <div class="form-outline flex-fill mb-0">
                                        <input asp-for="ConfirmPassword" class="form-control" placeholder="Confirm Password" />
                                        <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                                    </div>
                                </div>

                                <input type="submit" value="Submit" class="btn btn-primary btn-lg px-5" />


                            </form>

                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
</main>