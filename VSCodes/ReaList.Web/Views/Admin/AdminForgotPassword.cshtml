@{
    Layout = "~/views/shared/_Layout.cshtml";
    
}
<main>
    <section class="vh-100">
        <div class="row justify-content-center align-items-center h-100">
            <div class="col-xl-4">
                <div class="card">
                    <div class="card-body p-5 text-center">
                        <div class="pb-5">
                            <p class="text-center h1 fw-bold mb-5">Reset Password</p>
                            <p class="">Enter your email and we'll send you a link to reset your password.</p>
                            <form>
                                <div class="form-outline form-white mb-4">
                                    <input type="email" id="typeEmailX"
                                           class="form-control form-control-lg text-center"
                                           placeholder="e.g., yourmail@gmail.com" />
                                    <label class="form-label" for="typeEmailX"></label>
                                </div>
                                <button class="btn btn-primary btn-lg" type="submit">Reset Password</button>

                                <p class="mt-3">
                                    Click here to go back to <a href="./admin-login.html"
                                                                class="fw-bold">Login</a>
                                </p>
                            </form>
                        </div>
                    </div>

                </div>
            </div>
        </div>
    </section>
</main>