@model ReaList.Library.Model.UserAccounts.AgentAccountModel

<!DOCTYPE html>
<html lang="en">

<head>
    <title>Profile</title>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <!-- Local CSS -->
    <link rel="stylesheet" href="~/css/global.css">
    <link rel="stylesheet" href="~/css/profile.css">
    <!-- Bootstrap CSS v5.2.1 -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet"
          integrity="sha384-9ndCyUaIbzAi2FUVXJi0CjmCapSmO7SnpJef0486qhLnuZ2cdeRhO02iuK6FUUVM" crossorigin="anonymous">
    <!-- Bootstrap Font and Icons 1.3.0 -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.3.0/font/bootstrap-icons.css">
    <link class="jsbin" href="http://ajax.googleapis.com/ajax/libs/jqueryui/1/themes/base/jquery-ui.css" rel="stylesheet" type="text/css" />
</head>

<body>
    <main>
        <div class="d-flex container justify-content-center">
            <div class="row g-3 col-md-12">

                <h2 class="mt-5 mb-3">My Profile</h2>
                @if (!string.IsNullOrEmpty(ViewBag.SuccessMessage))
                {
                    <div class="alert alert-success">@ViewBag.SuccessMessage</div>
                }

                <div class="d-flex container justify-content-center">

                    <form asp-controller="Agent" asp-action="SaveProfile" method="post" enctype="multipart/form-data">
                        <div class="form-group col-lg-12 ">
                            <div class="row">
                                <center>
                                @if (ViewBag.ErrorMessage != null)
                                {
                                    <div class="error-message text-danger">
                                        @ViewBag.ErrorMessage
                                    </div>
                                    }
                                </center>
                                <!-- Agent ID -->
                                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                                <div class="form-group">
                                    <input asp-for="AgentID" class="form-control" type="hidden" />
                                </div>

                                <!-- Profile Picture -->
                                <div class="g-3 text-center mb-3">
                                    <div class="image-area">
                                        <div class="image-area mb-4">
                                            <img id="blah" class="profile-image" class="img-fluid shadow-sm mx-auto" src="~/UploadedFiles/@Html.DisplayFor(model => model.ProfilePicture)" alt="profile image" />
                                        </div>
                                        <input asp-for="ProfilePictureImage" type="file" class="uploadprofile-image" accept="image/*" multiple onchange="readURL(this);" />
                                        @Html.ValidationMessageFor(model => model.ProfilePictureImage, "", new { @class = "text-danger" })
                                    </div>
                                </div>

                                <!-- First Name and Last Name -->
                                <div class="row mx-auto mb-3 p-0">
                                    <div class="col-md-6">
                                        <label asp-for="FirstName" class="form-label">First Name</label>
                                        <input asp-for="FirstName" type="text" class="form-control">
                                        <span asp-validation-for="FirstName" class="text-danger"></span>
                                    </div>
                                    <div class="col-md-6">
                                        <label asp-for="LastName" class="form-label">Last Name</label>
                                        <input asp-for="LastName" type="text" class="form-control">
                                        <span asp-validation-for="LastName" class="text-danger"></span>
                                    </div>
                                </div>

                                <!-- Middle Name and Suffix -->
                                <div class="row mx-auto p-0 mb-3">
                                    <div class="col-md-6">
                                        <label asp-for="MiddleName" class="form-label">Middle Name</label>
                                        <input asp-for="MiddleName" type="text" class="form-control">
                                    </div>
                                    <div class="col-md-6">
                                        <label asp-for="Suffix" class="form-label">Suffix</label>
                                        <input asp-for="Suffix" type="text" class="form-control">
                                    </div>
                                </div>

                                <!-- Birthdate and Gender -->
                                <div class="row mx-auto p-0 mb-3">
                                    <div class="col-md-6">
                                        <label asp-for="Birthdate" class="form-label">Birthdate</label>
                                        <input asp-for="Birthdate" class="form-control" type="date" />
                                        <span asp-validation-for="Birthdate" class="text-danger"></span>
                                    </div>
                                    <div class="col-md-6">
                                        <label asp-for="Gender" class="form-label">Sex</label>
                                        <select asp-for="Gender" name="Gender" class="form-control">
                                            <option selected disabled>Select Sex</option>
                                            <option value="Male">Male</option>
                                            <option value="Female">Female</option>
                                            <option value="She">She</option>
                                            <option value="They">They</option>
                                        </select>
                                        <span asp-validation-for="Gender" class="text-danger"></span>
                                    </div>
                                </div>

                                <!-- Email and Phone Number -->
                                <div class="row mx-auto p-0 mb-3">
                                    <div class="col-md-6">
                                        <label asp-for="Email" class="form-label">Email</label>
                                        <input asp-for="Email" class="form-control" />
                                        <span asp-validation-for="Email" class="text-danger"></span>
                                      
                                    </div>
                                    <div class="col-md-6">
                                        <label asp-for="PhoneNumber" class="form-label">Phone Number</label>
                                        <input asp-for="PhoneNumber" class="form-control" />
                                        <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                                    </div>
                                </div>

                                <!-- Agent Type and License ID No. -->
                                <div class="row mx-auto p-0 mb-3">
                                    <div class="col-md-6">
                                        <label asp-for="AgentType" class="form-label">Agent Type</label>
                                        <select asp-for="AgentType" name="AgentType" class="form-control">
                                            <option selected disabled>Select Agent Type</option>
                                            <option value="Freelance">Freelance</option>
                                            <option value="Commercial">Commercial</option>
                                            <option value="Residential">Residential</option>
                                        </select>
                                        <span asp-validation-for="AgentType" class="text-danger"></span>
                                    </div>
                                    <div class="col-md-6">
                                        <label asp-for="LicenseIdNumber" class="form-label">License ID No.</label>
                                        <input asp-for="LicenseIdNumber" class="form-control" />
                                        <span asp-validation-for="LicenseIdNumber" class="text-danger"></span>
                                    </div>
                                </div>

                                <!-- Company Name -->
                                <div class="row mx-auto p-0 mb-3">
                                    <div class="col-md-12">
                                        <label asp-for="CompanyName" class="form-label">Company Name</label>
                                        <input asp-for="CompanyName" class="form-control" />
                                        <span asp-validation-for="CompanyName" class="text-danger"></span>
                                    </div>
                                </div>

                                <!-- Address -->
                                <div class="row mx-auto p-0 mb-3">
                                    <div class="col-md-12">
                                        <label asp-for="Address" class="form-label">Address</label>
                                        <input asp-for="Address" class="form-control" />
                                        <span asp-validation-for="Address" class="text-danger"></span>
                                    </div>
                                </div>

                                <!-- Education -->
                                <div class="row mx-auto p-0 mb-3">
                                    <div class="col-md-12">
                                        <label asp-for="Education" class="form-label">Education</label>
                                        <input asp-for="Education" class="form-control" />
                                        <span asp-validation-for="Education" class="text-danger"></span>
                                    </div>
                                </div>

                                <!-- Organization/s -->
                                <div class="row mx-auto p-0 mb-3">
                                    <div class="col-md-12">
                                        <label asp-for="Organizations" class="form-label">Organization/s</label>
                                        <input asp-for="Organizations" class="form-control" />
                                        <span asp-validation-for="Organizations" class="text-danger"></span>
                                    </div>
                                </div>

                                <!-- Agent About -->
                                <div class="row mx-auto p-0 mb-3">
                                    <div class="col-md-12">
                                        <label asp-for="AgentAbout" class="form-label">Agent About</label>
                                        <input type="textarea" asp-for="AgentAbout" class="form-control" />
                                        <span asp-validation-for="AgentAbout" class="text-danger"></span>
                                    </div>
                                </div>

                                <!-- Date Updated -->
                                <div class="form-group">
                                    <input asp-for="DateUpdated" class="form-control" type="hidden" />
                                </div>
                                <br />

                                <!-- Submit Button -->
                                <div class="row mx-auto p-0 justify-content-end align-items-end">
                                    <div class="col-sm-3 d-flex justify-content-end align-items-center">
                                        <input type="submit" value="Save Profile" class="btn" />
                                    </div>
                                </div>

                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>

        @section Scripts {
            @{
                await Html.RenderPartialAsync("_ValidationScriptsPartial");
            }
            <script class="jsbin" src="http://ajax.googleapis.com/ajax/libs/jquery/1/jquery.min.js"></script>
            <script class="jsbin" src="http://ajax.googleapis.com/ajax/libs/jqueryui/1.8.0/jquery-ui.min.js"></script>

            <script type="text/javascript">
                function readURL(input) {
                    if (input.files && input.files[0]) {
                        var reader = new FileReader();

                        reader.onload = function (e) {
                            $('#blah')
                                .attr('src', e.target.result)
                                .width(100)
                                .height(100);
                        };

                        reader.readAsDataURL(input.files[0]);
                    }
                }
            </script>
        }

    </main>
</body>
</html>